<div class="container-fluid">
	<div class="row mt-2 mb-2">
		<div class="col-6">
			<h1><%= I18n.t('views.headers.products.mass_stock') %></h1>
		</div>
	</div>

	<div class="row">
		<div class="col-8">
			<%= simple_form_for :product, url: 'mass_stock_update', authenticity_token: true  do |f| %>
				<% 8.times do |n| %>
					<%= f.simple_fields_for :mass_stock do |builder| %>
				    <%= render 'mass_stock_fields', number: n, f: builder %>
				  <% end %>
				<% end %>
		</div>
	</div>

	<div class="row mb-6 mt-2 ml-2">
		<div class="col-7">
			<button type="button" class="btn btn-outline-primary">
				<%= link_to I18n.t('helpers.buttons.back'), products_path, data: { confirm: I18n.t('helpers.buttons.are_you_sure')} %>
			</button>
		</div>
		<div class="col-4 ml-4">
			<%= f.button :submit, class: "btn-primary" %>
			<% end %>
		</div>
	</div>
	<br>
</div>
