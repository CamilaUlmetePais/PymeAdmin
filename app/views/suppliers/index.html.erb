<div class='container-fluid'>
  <%= render 'shared/notice', notice: notice %>
  <%= render 'shared/alert', alert: alert %>

  <div class="row mt-2 mb-2">
    <div class="col-7">
      <h1><%= I18n.t('activerecord.models.supplier.other') %></h1>
    </div>
    <div class="col-2">
      <button type="button" class="btn btn-primary btn-lg"><%= link_to I18n.t('helpers.links.new_supplier') , new_supplier_path, class: 'white-text' %></button>
    </div>
  </div>

  <div class="row">
    <div class='col-9'>
      <table class='table table-light'>
        <thead>
          <tr>
            <th><%= I18n.t('activerecord.attributes.suppliers.name') %></th>
            <th><%= I18n.t('activerecord.attributes.suppliers.phone_number') %></th>
            <th><%= I18n.t('activerecord.attributes.suppliers.account_balance') %></th>
            <th><%= I18n.t('activerecord.attributes.suppliers.notification_threshold') %></th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @suppliers.order(name: :asc).each do |supplier| %>
            <tr>
              <td><%= supplier.name %></td>
              <td><%= supplier.phone_number %></td>
              <td>$ <%= supplier.account_balance %></td>
              <td>$ <%= supplier.notification_threshold %></td>
              <td>
                <button type="button" class="btn btn-primary btn-sm">
                  <%= link_to I18n.t('helpers.buttons.show'), supplier, class: 'white-text' %>
                </button>
              </td>
              <td>
                <button type="button" class="btn btn-success btn-sm">
                  <%= link_to I18n.t('helpers.buttons.edit'), edit_supplier_path(supplier), class: 'white-text' %>
                </button>
              </td>
              <td>
                <button type="button" class="btn btn-danger btn-sm" >
                  <%= link_to I18n.t('helpers.buttons.destroy'), supplier, class: 'white-text',
                  method: :delete, data: { confirm: I18n.t('helpers.buttons.are_you_sure') } %>
                </button>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <br>
</div>