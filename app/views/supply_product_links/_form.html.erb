<%= simple_form_for(@supply_product_link, html: { class: 'form-vertical' }) do |f| %>
  <div class="row">
    <div class="col-4">
      <%= f.error_notification %>
      <%= f.input :product_id, collection: @products, input_html: { id: 'product_id' }, prompt: I18n.t('simple_form.prompts.defaults.product') %>
      <%= f.input :supply_id, collection: @supplies, input_html: { id: 'supply_id' }, prompt: I18n.t('simple_form.prompts.defaults.supply') %>
    </div>
  </div>

	<div class="row">
		<div class="col-2">
      <button type="button" class="btn btn-outline-primary">
        <%= link_to I18n.t('helpers.buttons.back'), supply_product_links_path, data: { confirm: I18n.t('helpers.buttons.are_you_sure')} %>
      </button>
		</div>
		<div class="col-3">
			<%= f.button :submit, class: "btn-primary" %>
		</div>
	</div>

<% end %>